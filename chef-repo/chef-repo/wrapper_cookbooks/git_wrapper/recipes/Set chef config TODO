Install Chef Development Kit version 0.4.0
  wget https://opscode-omnibus-packages.s3.amazonaws.com/el/6/x86_64/chefdk-0.4.0-1.x86_64.rpm
  yum install chefdk-0.4.0-1.x86_64.rpm
Install Build Essentials
  yum install autoconf bison flex gcc gcc-c++ kernel-devel make m4 patch
Install Java jdk1.8.0_77
  wget --no-check-certificate --no-cookies --header "Cookie: oraclelicense=accept-securebackup-cookie" http://download.oracle.com/otn-pub/java/jdk/8u77-b03/jdk-8u77-linux-x64.rpm -O jdk-8u77-linux-x64.rpm
  yum install jdk-8u77-linux-x64.rpm
Install PhantomJS 2.1.1
  wget https://bitbucket.org/ariya/phantomjs/downloads/phantomjs-2.1.1-linux-x86_64.tar.bz2 -O phantomjs-2.1.1-linux-x86_64.tar.bz2
  tar xjf phantomjs-2.1.1-linux-x86_64.tar.bz2 -C /usr/local/share
  ln -s /usr/local/share/phantomjs-2.1.1-linux-x86_64/bin/phantomjs /usr/local/bin/phantomjs
  yum install fontconfig
Install VirtualBox 4.3.30
  wget http://download.virtualbox.org/virtualbox/4.3.30/VirtualBox-4.3-4.3.30_101610_el6-1.x86_64.rpm
  yum install VirtualBox-4.3-4.3.30_101610_el6-1.x86_64.rpm
Install Git 1.9.5
  yum remove git
  yum install curl-devel expat-devel gettext-devel openssl-devel zlib-devel gcc perl-ExtUtils-MakeMaker
  wget https://www.kernel.org/pub/software/scm/git/git-1.9.5.tar.gz
  tar xf git-1.9.5.tar.gz -C /usr/src
  cd /usr/src/git-1.9.5
  make prefix=/usr/local/git all
  make prefix=/usr/local/git install
  echo "export PATH=$PATH:/usr/local/git/bin" >> /etc/bashrc
  source /etc/bashrc
Install Gradle 2.4
  wget -N https://services.gradle.org/distributions/gradle-2.4-all.zip
  mkdir --parent /usr/local/gradle
  unzip gradle-${gradle_version}-all.zip -d /usr/local/gradle
Install Chrome LATEST
  wget http://chrome.richardlloyd.org.uk/install_chrome.sh
  sh install_chrome.sh
Install NodeJS v0.10.40
  curl --silent --location https://rpm.nodesource.com/setup | bash -
  yum -y install nodejs-0.10.40
Install Vagrant 1.4.3
  wget --no-check-certificate https://releases.hashicorp.com/vagrant/1.4.3/vagrant_1.4.3_x86_64.rpm
  yum install vagrant_1.4.3_x86_64.rpm
