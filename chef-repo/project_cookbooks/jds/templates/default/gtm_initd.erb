# init script for VistA
# Modifications by SMH for JDS

# Debian LSB info
### BEGIN INIT INFO
# Provides:          foiavista
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start VistA services at boot time
# Description:       Starts/Stops VistA instances in a sane way.
### END INIT INFO

# Start JDS
start() {
    su - <%= node[:jds][:gtm_user] %> -c ". <%= node[:jds][:gtm_jds_install_dir] %>/myenv.jds && mumps -r GO^VPRJRCL" 
}

# Stop JDS
stop() {
    echo "Stopping any remaining M processes nicely"
    su - <%= node[:jds][:gtm_user] %> -c ". <%= node[:jds][:gtm_jds_install_dir] %>/myenv.jds && pgrep mumps | xargs --max-args=1 mupip stop"
    
    processes=$(pgrep mumps)
    if [ ! -z "${processes}" ] ; then
    echo "M process are being shutdown forcefully!"
            pkill -9 mumps
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
