# init script for VistA
# Modifications by SMH for VistA

# Debian LSB info
### BEGIN INIT INFO
# Provides:          foiavista
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start VistA services at boot time
# Description:       Starts/Stops VistA instances in a sane way.
### END INIT INFO


# Start VistA
start() {
  source <%= node[:vista][:gtm_vista_install_dir] %>/env.vista
  su <%= node[:vista][:gtm_user] %> -c "source <%= node[:vista][:gtm_vista_install_dir] %>/env.vista &&
    if [ -f ${vista_home}/j/mumps.mjl ]; then
      echo \"Recovering old journals...\"
      mupip journal -recover -backward ${vista_home}/j/mumps.mjl
    fi"

  if (( $(find ${vista_home}/j -name '*_*' -mtime +3 -print | wc -l) > 0 )); then
    echo "Deleting old journals..."
    find ${vista_home}/j -name '*_*' -mtime +3 -print -delete
  fi

  su <%= node[:vista][:gtm_user] %> -c "cd <%= node[:vista][:gtm_vista_install_dir] %>; source ./env.vista; mupip rundown -region '*'" 
  su <%= node[:vista][:gtm_user] %> -c "cd <%= node[:vista][:gtm_vista_install_dir] %>; source ./env.vista; mupip set -journal=\"enable,on,before,f=${vista_home}/j/mumps.mjl\" -region DEFAULT"
  su <%= node[:vista][:gtm_user] %> -c "cd <%= node[:vista][:gtm_vista_install_dir] %>; source ./env.vista; mumps -run %XCMD 'J ZISTCP^XWBTCPM1(9210)'" 
  su <%= node[:vista][:gtm_user] %> -c "cd <%= node[:vista][:gtm_vista_install_dir] %>; source ./env.vista; mumps -run ZTMB"
  su <%= node[:vista][:gtm_user] %> -c "cd <%= node[:vista][:gtm_vista_install_dir] %>; source ./env.vista; mumps -run %XCMD 'J START^XOBVLL(8000)'"
}

# Stop VistA
stop() {
    su <%= node[:vista][:gtm_user] %> -c "source <%= node[:vista][:gtm_vista_install_dir] %>/env.vista; mumps -run %XCMD 'S U=\"^\" D STOP^ZTMKU' << EOF
Y
Y
Y
EOF"
    # Wait for TaskMan to stop
    echo "Waiting for TaskMan to stop (30 sec)"
    sleep 30

    echo "Stopping any remaining M processes nicely"
    su - <%= node[:vista][:gtm_user] %> -c ". <%= node[:vista][:gtm_vista_install_dir] %>/env.vista && pgrep mumps | xargs --max-args=1 mupip stop"
    sleep 2
    
    processes=$(pgrep mumps)
    if [ ! -z "${processes}" ] ; then
      echo "M process are being shutdown forcefully!"
      pkill -9 mumps
    fi
    rm -fv /tmp/gtm_*
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
