{
    "apiVersion": "1.0.0",
    "swaggerVersion": "1.2",
    "basePath":"http://localhost:9080",
    "resourcePath": "/vpr",
    "apis": [
        {
            "path": "/vpr/uid/{uid}",
            "operations": [
                {
                    "method":"GET",
                    "nickname":"getPatientDataItemByUniqueId",
                    "type":"PatientDataItem",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "uid",
                            "description": "UID of item that needs to be fetched",
                            "type": "string",
                            "required": true
                        }
                    ],
                    "summary": "Fetch an item by UID",
                    "responseMessages":[
                        {
                            "code": 404,
                            "message": "The item cannot be found"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/vpr/uid/{uid}/{template}",
            "operations": [
                {
                    "method":"GET",
                    "nickname":"getPatientDataItemByUniqueIdWithTemplate",
                    "type":"PatientDataItem",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "uid",
                            "description": "UID of item that needs to be fetched",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "path",
                            "name": "template",
                            "description": "The name of a JDS template to format the response with",
                            "type": "string",
                            "required": true,
                            "enum":[
                                "uid",
                                "summary",
                                "notext",
                                "dose"
                            ]
                        }
                    ],
                    "summary": "Fetch an item by UID in a specific format"
                }
            ]
        },
        {
            "path": "/vpr/{pid}",
            "operations": [
                {
                    "method":"GET",
                    "nickname":"getPatient",
                    "type":"Patient",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "pid",
                            "description": "PID of patient to fetch",
                            "type": "string",
                            "required": true
                        }
                    ],
                    "summary": "Fetch a patient by PID",
                    "responseMessages":[
                        {
                            "code": 404,
                            "message": "The patient cannot be found"
                        }
                    ]
                },
                {
                    "method":"POST",
                    "nickname":"updatePatient",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "pid",
                            "description": "PID of patient to update",
                            "type": "string",
                            "required": true
                        }
                    ],
                    "summary": "Update a patient by PID"
                },
                {
                    "method":"PUT",
                    "nickname":"updatePatient",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "pid",
                            "description": "PID of patient to update",
                            "type": "string",
                            "required": true
                        }
                    ],
                    "summary": "Update a patient by PID"
                }
            ]
        },
        {
            "path": "/vpr/{pid}/index/{indexName}",
            "operations": [
                {
                    "method":"GET",
                    "nickname":"getPatientDataFromIndex",
                    "type":"JsonCCollection",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "pid",
                            "description": "PID of patient whose data to fetch",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "path",
                            "name": "indexName",
                            "description": "Name of a VPR index from which to fetch patient data",
                            "type": "string",
                            "required": true,
                            "enum": [
                                "allergy",
                                "consult",
                                "document",
                                "encounter",
                                "medication"
                            ]
                        }
                    ],
                    "summary": "Fetch patient data by index",
                    "responseMessages":[
                        {
                            "code": 404,
                            "message": "The item cannot be found"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/vpr/{pid}/index/{indexName}/{template}",
            "operations": [
                {
                    "method":"GET",
                    "nickname":"getPatientDataItemByUniqueIdWithTemplate",
                    "type":"PatientDataItem",
                    "parameters":[
                        {
                            "paramType": "path",
                            "name": "uid",
                            "description": "UID of item that needs to be fetched",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "path",
                            "name": "template",
                            "description": "The name of a JDS template to format the response with",
                            "type": "string",
                            "required": true,
                            "enum":[
                                "uid",
                                "summary",
                                "notext",
                                "dose"
                            ]
                        }
                    ],
                    "summary": "Fetch an item by UID in a specific format"
                }
            ]
        },
        {
            "path": "/vpr",
            "operations": [
                {
                    "method":"DELETE",
                    "nickname":"deleteAllPatientData",
                    "summary": "Delete all patient data"
                }
            ]
        }
    ]
}
