<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>

	<!-- Don't bother checking the third-party vistacowboy code. -->
	<suppress checks=".*" files=".*[\\/]com[\\/]vistacowboy[\\/]"/>

    <!-- Tone down the checking for test code -->
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/]itest[\\/]"/>

    <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/]itest[\\/]"/>

    <suppress checks="ParameterNumber" files=".*Resource.java"/>

</suppressions>
