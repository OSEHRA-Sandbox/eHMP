<?xml version="1.0" encoding="UTF-8"?>
<configuration status="debug">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<Console name="requestIdAppender" target="SYSTEM_OUT">
			<PatternLayout pattern="{&quot;name&quot;:&quot;%X{context}&quot;,&quot;hostname&quot;:&quot;%X{hostname}&quot;,&quot;sid&quot;:&quot;%X{sid}&quot;,&quot;requestId&quot;:&quot;%X{requestId}&quot;,&quot;level&quot;:&quot;%p&quot;,&quot;msg&quot;:&quot;%m %X{httpMethod} %X{path}&quot;,&quot;time&quot;:&quot;%X{dateTime}&quot;}%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="com.cognitive.cds.utils.log.Slf4jIncomingEventSender" level="info">
			<AppenderRef ref="requestIdAppender" />
		</Logger>
	</Loggers>
</configuration>
