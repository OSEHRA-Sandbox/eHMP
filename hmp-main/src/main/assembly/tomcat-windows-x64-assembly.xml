<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-windows-x64</id>
    <formats>
        <format>zip</format>
    </formats>
    <componentDescriptors>
        <componentDescriptor>tomcat-component.xml</componentDescriptor>
    </componentDescriptors>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/tomcat/windows-x64</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.exe</include>
				<include>*.dll</include>
				<include>*.bat</include>
            </includes>
        </fileSet>
    </fileSets>
	<files>
		<file>
			<source>src/main/assembly/tomcat/windows-x64/service.bat</source>
			<outputDirectory>/bin</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>
